echo Running phpSentinelCompileSentinel

# script that is called by root with user sentinel
# path and env are not set correctly though

HOME="/home/sentinel"
LANG=en_US.UTF-8
PATH=/home/sentinel/svn/Sentinel/scripts:/home/sentinel/.cabal/bin/:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games

export HOME
export LANG
export PATH

# leaving the dist sometimes causes cabal clean problems
rm -rf /home/sentinel/svn/Sentinel/dist
cd /home/sentinel/svn/Sentinel
svn cleanup
svn update

echo Cleaning Sentinel and installing sandbox
scripts/cleanSentinel
echo Running cabal install on sentinel 
cabal install --bindir=$HOME/.cabal/bin