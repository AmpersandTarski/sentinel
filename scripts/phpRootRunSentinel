echo Running phpRootRunSentinel
# wrapper script that is called by the www server as root (from php)
# and calls runSentinel as user 'sentinel' with optional --deleteSandbox arg

# Kill 'em all
killall --quiet runSentinel
killall --quiet sentinel
killall --quiet cabal
killall --quiet ghc

sudo -u sentinel /home/sentinel/svn/Sentinel/scripts/runSentinel $1 > /home/sentinel/svn/Sentinel/www/logs/runSentinel.log.txt 2>&1
